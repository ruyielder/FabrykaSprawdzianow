<div class="container">
  <div class="header">
    <nav>
      <ul class="nav nav-pills pull-right">
        <li role="presentation" class="active"><a href="<%= tests_path %>"><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Testy</a></li>
        <li role="presentation"><a href="<%= tasks_path %>"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Zadania</a></li>
        <li role="presentation"><a href="<%= students_path %>"><span class="glyphicon glyphicon-user"></span> Uczniowie</a></li>
        <li role="presentation"><a href="<%= destroy_user_session_path %>" data-method="delete"><span class="glyphicon glyphicon-off"></span> Wyloguj się</a></li>
      </ul>
    </nav>
    <h3 class="text-muted">Test Factory</h3>
  </div>
  
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Student</th>
      <th>Data utworzenia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.student.name %>
        <td><%= test.created_at.to_date %></td>
        <td><%= link_to raw('<span class="glyphicon glyphicon-eye-open"></span> Podgląd'), test %></td>
        <td><%= link_to raw('<span class="glyphicon glyphicon-download"></span> Pobierz'), test_path(test, :format => :pdf) %></span></td>
        <td><%= link_to 'Usuń', test, class: 'label label-danger', method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <%= link_to 'Dodaj test', new_test_path, class: 'btn btn-primary' %>
</div>