<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
</head>
<body>
    <% @test.tasks.each_with_index do |task, index| %>
      <p><strong><%= index + 1 %>. <%= task.question %></strong></p>
      <p><%= index + 1 %>. <%= task.answer %></p>

        <% if task.extra_text %>
            <p><em><%= index + 1 %>. <%= task.extra_text %></em></p>
        <% end %>

    <% end %>
</body>
</html>