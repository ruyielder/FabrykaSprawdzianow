<div class="container">
  <div class="header">
    <nav>
      <ul class="nav nav-pills pull-right">
        <li role="presentation"><a href="<%= tests_path %>"><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Testy</a></li>
        <li role="presentation"><a href="<%= tasks_path %>"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Zdania</a></li>
        <li role="presentation" class="active"><a href="<%= students_path %>"><span class="glyphicon glyphicon-user"></span> Uczniowie</a></li>
        <li role="presentation"><a href="<%= destroy_user_session_path %>" data-method="delete"><span class="glyphicon glyphicon-off"></span> Wyloguj siÄ™</a></li>
      </ul>
    </nav>
    <h3 class="text-muted">Test Factory</h3>
  </div>

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <%= form_for(@student, html: {role: "form"}) do |f| %>
          <% if @student.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span><%= @student.errors.first[0] %> <%= @student.errors.first[1] %>
              </div>
          <% end %>
          <div class="form-group">
            <%= f.label 'Nazwa ucznia' %><br>
            <%= f.text_field :name, autofocus: true, class: 'form-control'%>
          </div>
          <div class="actions">
            <%= f.submit 'Dodaj ucznia', class:  'btn btn-lg btn-primary btn-block' %>
          </div>
      <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>