<div class="container">
  <div class="header">
    <nav>
      <ul class="nav nav-pills pull-right">
        <li role="presentation"><a href="<%= tests_path %>"><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Testy</a></li>
        <li role="presentation"><a href="<%= tasks_path %>"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Zadania</a></li>
        <li role="presentation" class="active"><a href="<%= students_path %>"><span class="glyphicon glyphicon-user"></span> Uczniowie</a></li>
        <li role="presentation"><a href="<%= destroy_user_session_path %>" data-method="delete"><span class="glyphicon glyphicon-off"></span> Wyloguj się</a></li>
      </ul>
    </nav>
    <h3 class="text-muted">Test Factory</h3>
  </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nazwa ucznia</th>
      <th>Data utworzenia</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.created_at.to_date %></td>
        <td><%= link_to raw('<span class="glyphicon glyphicon-wrench"></span> Edytuj'), edit_student_path(student) %></td>
        <td><%= link_to 'Usuń', student, method: :delete, class: 'label label-danger', data: { confirm: 'Jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Dodaj ucznia', new_student_path, class: 'btn btn-primary' %>

</div>