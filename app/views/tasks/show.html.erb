<div class="container">
  <div class="header">
    <nav>
      <ul class="nav nav-pills pull-right">
        <li role="presentation"><a href="<%= tests_path %>"><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Testy</a></li>
        <li role="presentation" class="active"><a href="<%= tasks_path %>"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Zadania</a></li>
        <li role="presentation"><a href="<%= students_path %>"><span class="glyphicon glyphicon-user"></span> Uczniowie</a></li>
        <li role="presentation"><a href="<%= destroy_user_session_path %>" data-method="delete"><span class="glyphicon glyphicon-off"></span> Wyloguj się</a></li>
      </ul>
    </nav>
    <h3 class="text-muted">Test Factory</h3>
  </div>

  <div class="row">
    <div class="panel panel-default">
    <form class="form-horizontal" role="form">

      <div class="form-group">
        <label class="col-sm-2 control-label">Zadanie</label>
        <div class="col-sm-10">
          <p class="form-control-static"><%= @task.question %></p>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">Rozwiązanie</label>
        <div class="col-sm-10">
          <p class="form-control-static"><%= @task.answer %></p>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">Tagi</label>
        <div class="col-sm-10">
          <p class="form-control-static">
          <% @task.user_tags.each do |user_tag| %>
              <span class="label label-info"><%= user_tag.tag %></span>
          <% end %>
          </p>
        </div>
      </div>
    </form>
  </div>
</div>
  <p><%= link_to raw('<span class="glyphicon glyphicon-wrench"></span> Edytuj'), edit_task_path(@task), class: 'btn btn-primary' %></p>
</div>