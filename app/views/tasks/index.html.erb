<div class="container">
  <div class="header">
    <nav>
      <ul class="nav nav-pills pull-right">
        <li role="presentation"><a href="<%= tests_path %>"><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Testy</a></li>
        <li role="presentation" class="active"><a href="<%= tasks_path %>"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Zadania</a></li>
        <li role="presentation"><a href="<%= students_path %>"><span class="glyphicon glyphicon-user"></span> Uczniowie</a></li>
        <li role="presentation"><a href="<%= destroy_user_session_path %>" data-method="delete"><span class="glyphicon glyphicon-off"></span> Wyloguj się</a></li>
      </ul>
    </nav>
    <h3 class="text-muted">Test Factory</h3>
  </div>
    <% @tasks_user_tags.group_by {|tut| tut.user_tag.tag}.each do |tag, tasks_user_tags| %>
          <table class="table table-striped">
            <thead>
            <tr>
              <th>Zadania tagu: <span class="label label-info"><%= tag %></span></th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% tasks_user_tags.each do |task_user_tag|%>
                <tr>
                  <td><%= task_user_tag.task.question %></td>
                  <td><%= link_to raw('<span class="glyphicon glyphicon-eye-open"></span> Podgląd'), task_user_tag.task %></td>
                  <td><%= link_to raw('<span class="glyphicon glyphicon-wrench"></span> Edytuj'), edit_task_path(task_user_tag.task) %></td>
                  <td><%= link_to 'Usuń', task_user_tag.task, method: :delete, class: 'label label-danger', data: { confirm: 'Jesteś pewien?' } %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
    <% end %>
<br>

<%= link_to 'Dodaj zadanie', new_task_path, class: 'btn btn-primary' %>
</div>