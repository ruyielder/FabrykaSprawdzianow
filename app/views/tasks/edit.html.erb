<div class="container">
  <div class="header">
    <nav>
      <ul class="nav nav-pills pull-right">
        <li role="presentation"><a href="<%= tests_path %>"><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Testy</a></li>
        <li role="presentation" class="active"><a href="<%= tasks_path %>"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Zdania</a></li>
        <li role="presentation"><a href="<%= students_path %>"><span class="glyphicon glyphicon-user"></span> Uczniowie</a></li>
        <li role="presentation"><a href="<%= destroy_user_session_path %>" data-method="delete"><span class="glyphicon glyphicon-off"></span> Wyloguj się</a></li>
      </ul>
    </nav>
    <h3 class="text-muted">Test Factory</h3>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_for(@task, html: {role: "form"}) do |f| %>
          <% if @task.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span><%= @task.errors.first[0] %> <%= @task.errors.first[1] %>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label 'Zdanie' %><br>
            <%= f.text_field :question, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label 'Rozwiązanie' %><br>
            <%= f.text_field :answer, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label 'Tagi' %><br>
            <%= f.text_field :tags_line, class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit 'Zapisz zdanie', class:  'btn btn-lg btn-primary btn-block' %>
          </div>
      <% end %>
    </div>
  </div>
</div>